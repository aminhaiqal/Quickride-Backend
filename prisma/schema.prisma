// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  driver    Driver?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ride      Ride[]
  bookings  RideBooking[]
  rating    RatingReview[]
}

model Ride {
  id          String   @id @default(uuid())
  title       String
  description String?
  price       Float
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  bookings    RideBooking[]
}

model RideBooking {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  ride      Ride     @relation(fields: [rideId], references: [id])
  rideId    String
  pickup    String
  dropoff   String
  payment   String?
  ridepref  String?
}

model Driver {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  rating    RatingReview[]
}

model RatingReview {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  driver    Driver   @relation(fields: [driverId], references: [id])
  driverId  String
  rating    Int
  review    String?
}
